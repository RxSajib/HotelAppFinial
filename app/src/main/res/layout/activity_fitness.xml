<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FitnessActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/FitnessToolbarID"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@id/FitnessToolbarID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/OneI"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:src="@drawable/gymone"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="0dp">

                <ImageView
                    android:src="@drawable/gymtwo"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:src="@drawable/gymthree"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>





        </LinearLayout>
        <TextView
            android:layout_below="@+id/OneI"
            android:id="@+id/ConrnercafeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="GYM,FITNESS CENTER"
            android:textColor="#FF5722"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ConnertextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ConrnercafeID"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/fitnesstext"
            android:textSize="15dp" />

    </RelativeLayout>

</RelativeLayout>