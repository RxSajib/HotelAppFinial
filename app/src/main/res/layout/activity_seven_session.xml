<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SevenSessionActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/SevenSessionToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white">

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SevenSessionToolbarID">

        <ImageView
            android:id="@+id/jj"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:src="@drawable/sevensimageicon"
         >

        </ImageView>

        <TextView
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jj"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="7 SEASONS Restaurant"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seventext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seven"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/seven_session"
            android:textSize="15dp" />
    </RelativeLayout>


</RelativeLayout>