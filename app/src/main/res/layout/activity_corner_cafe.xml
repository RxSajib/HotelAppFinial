<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CornerCafeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/CornerCafeToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/CornerCafeToolbarID">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





        <ImageView
            android:id="@+id/oone"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cornercafeone">

        </ImageView>

        <ImageView
            android:id="@+id/otwo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/oone"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bacd"
            >

        </ImageView>

        <ImageView
            android:id="@+id/othree"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/otwo"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cornercafethree"
            >
        </ImageView>


        <TextView
            android:id="@+id/ConrnercafeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/othree"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="THE CORNER CAFE"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ConnertextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ConrnercafeID"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/CornerCafetext"
            android:textSize="15dp" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


</RelativeLayout>