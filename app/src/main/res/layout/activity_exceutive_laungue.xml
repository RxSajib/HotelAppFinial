<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exceutiveLaungue">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ExcID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ExcID">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/aone"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rrone">

                </ImageView>

                <ImageView
                    android:id="@+id/atwo"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/aone"
                    android:scaleType="fitXY"
                    android:src="@drawable/ttwo">

                </ImageView>

                <ImageView
                    android:id="@+id/athree"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/atwo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/asdsdfsdf">
                </ImageView>



        <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/athree"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="The Executive Lounge"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ExID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ss"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/excluse_text"
            android:textSize="15dp"

            />
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>