<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HukalangActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/HukalangToolbarID"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_below="@id/HukalangToolbarID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/one"
            android:scaleType="centerCrop"
            android:src="@drawable/hukaone"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </ImageView>

        <ImageView
            android:id="@+id/twos"
            android:layout_below="@+id/one"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:src="@drawable/hukatwo"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </ImageView>

        <ImageView
            android:id="@+id/ythree"
            android:layout_below="@+id/twos"
            android:scaleType="centerCrop"
            android:src="@drawable/hukathree"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </ImageView>


        <TextView
            android:layout_below="@+id/ythree"
            android:id="@+id/HookanID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="THE HOOKAH LOUNGE"
            android:textColor="#FF5722"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/HookanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/HookanID"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/Hookantext"
            android:textSize="15dp" />



            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>


</RelativeLayout>