<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwmmingPoolActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/SwmmingToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SwmmingToolbarID">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/onep"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/swmpoolone"></ImageView>

        <ImageView
            android:id="@+id/twop"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/onep"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/swmpooltwo"></ImageView>

        <ImageView
            android:id="@+id/picthree"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/twop"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/swmpoolthree"></ImageView>


        <TextView
            android:id="@+id/SConrnercafeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picthree"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Swimming Pool"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SConnertextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SConrnercafeID"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/fitnesstext"
            android:textSize="15dp" />

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>